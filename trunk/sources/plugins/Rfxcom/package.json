{
   "name": "rfxcom",
   "description": "RFXCom radio interface support (see http://rfxcom.com/)",
   "version": "0.1",
   "releaseType": "beta",
   "author": "SÃ©bastien Gallou",
   "url": "http://sourceforge.net/projects/yadoms/",
   "SupportedPlatforms": "all",
   "configurationSchema":
   {
      "Communication":
      {
         "type" : "radioSection",
         "name" : "Communication",
         "description" : "The connection type to the RFXCom/RFXLan",
         "content" :
         {
            "SerialPort" :
            {
               "type" : "section",
               "name" : "Serial port",
               "description" : "The virtual serial port connected to the RFXCom",
               "content" :
               {
                  "serialPort" :
                  {
                  "type" : "serialPort",
                  "name" : "Select serial port"
                  }
               }
            },
            "Network" :
            {
               "type" : "section",
               "name" : "Network",
               "description" : "The network connection to the RFXLan",
               "content" :
               {
                  "ipAddress" :
                  {
                  "type" : "string",
                  "name" : "Address",
                  "description" : "IP Address or DNS name",
                  "defaultValue" : "rfxlan"
                  },
                  "port":
                  {
                     "type" : "int",
                     "name" : "TCP port",
                     "description" : "The TCP port",
                     "defaultValue" : "10001"
                  }
               }
            }
         }
      },
      "Protocols":
      {
          "type" : "section",
          "name" : "Protocols to listen",
          "description" : "Supported protocols to listen, see RFXCom manual to configure. Be careful, some protocols are incompatible and must not be selected together.",
          "enableWithCheckBox" : "false",
          "enableWithCheckBoxDefaultValue" : "false",
          "content" :
          {
             "AE Blyss" : { "type" : "bool", "name" : "AE Blyss", "defaultValue" : "false" },
             "Rubicson" : { "type" : "bool", "name" : "Rubicson", "defaultValue" : "false" },
             "FineOffset/Viking" : { "type" : "bool", "name" : "FineOffset/Viking", "defaultValue" : "false" },
             "Lighting4" : { "type" : "bool", "name" : "Lighting4", "defaultValue" : "false" },
             "RSL" : { "type" : "bool", "name" : "RSL", "defaultValue" : "false" },
             "Byron SX" : { "type" : "bool", "name" : "Byron SX", "defaultValue" : "false" },
             "RFU" : { "type" : "bool", "name" : "RFU", "defaultValue" : "false" },
             "undecoded messages" : { "type" : "bool", "name" : "undecoded messages", "defaultValue" : "false" },
             "Mertik" : { "type" : "bool", "name" : "Mertik", "defaultValue" : "false" },
             "AD LightwaveRF" : { "type" : "bool", "name" : "AD LightwaveRF", "defaultValue" : "false" },
             "Hideki/UPM" : { "type" : "bool", "name" : "Hideki/UPM", "defaultValue" : "true" },
             "La Crosse" : { "type" : "bool", "name" : "La Crosse", "defaultValue" : "true" },
             "FS20" : { "type" : "bool", "name" : "FS20", "defaultValue" : "false" },
             "ProGuard" : { "type" : "bool", "name" : "ProGuard", "defaultValue" : "false" },
             "BlindsT0" : { "type" : "bool", "name" : "BlindsT0", "defaultValue" : "false" },
             "BlindsT1" : { "type" : "bool", "name" : "BlindsT1", "defaultValue" : "false" },
             "X10" : { "type" : "bool", "name" : "X10", "defaultValue" : "true" },
             "ARC" : { "type" : "bool", "name" : "ARC", "defaultValue" : "true" },
             "AC" : { "type" : "bool", "name" : "AC", "defaultValue" : "true" },
             "HomeEasy EU" : { "type" : "bool", "name" : "HomeEasy EU", "defaultValue" : "true" },
             "Meiantech" : { "type" : "bool", "name" : "Meiantech", "defaultValue" : "false" },
             "Oregon Scientific" : { "type" : "bool", "name" : "Oregon Scientific", "defaultValue" : "true" },
             "ATI" : { "type" : "bool", "name" : "ATI", "defaultValue" : "false" },
             "Visonic" : { "type" : "bool", "name" : "Visonic", "defaultValue" : "false" }
          }
       }
   },
