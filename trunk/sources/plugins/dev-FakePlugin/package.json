{
  "type": "fakePlugin",
  "version": "0.1",
  "releaseType": "beta",
  "author": "yadoms-team",
  "url": "http://sourceforge.net/projects/yadoms/",
  "credits": "",
  "supportedPlatforms": "all",
  "configurationSchema": {
    "StringParameter": {
      "type": "string"
    },
    "BoolParameter": {
      "type": "bool",
      "defaultValue": "false"
    },
    "IntParameter": {
      "type": "int",
      "defaultValue": "258"
    },
    "DecimalParameter": {
      "type": "decimal",
      "defaultValue": "25.3"
    },
    "EnumParameter": {
      "type": "enum",
      "values": {
        "EnumValue1": "",
        "EnumValue2": "",
        "EnumValue3": ""
      },
      "defaultValue": "EnumValue2"
    },
    "MySection": {
      "type": "section",
      "content": {
        "SubIntParameter": {
          "type": "int",
          "defaultValue": "65535"
        },
        "SubStringParameter": {
          "type": "string"
        }
      }
    },
    "ConditionalParameter": {
      "type": "string",
      "show": {
        "__Binding__": {
          "type": "system",
          "query": "platformIsWindows"
        }
      }      
    }    
  },
  "supportManuallyDeviceCreation": "true",
  "manuallyDeviceCreationConfigurationSchema": {
    "networkInterface": {
      "type": "enum",
      "values": {
        "__Binding__": {
          "type": "system",
          "query": "networkInterfaces"
        }
      }
    },
    "dynamicSection": {
      "type": "section",
      "content": {
        "__Binding__": {
          "type": "plugin",
          "query": "test"
        }
      }
    }
  },
  "enumerations": {
    "EFakeControllerValues": {
      "Stop": "",
      "Run": "",
      "Back": "",
      "Left": "",
      "Right": ""
    }
  },
  "recipientFields" : {
    "address": {
      "type": "string",
      "regex" : ""
    },
    "zipcode": {
      "type": "string",
      "regex" : "^(F-)?((2[A|B])|[0-9]{2})[0-9]{3}$"
    },
    "mms" : {
      "type" : "bool",
      "defaultValue" : "true"
    }
  }
}
