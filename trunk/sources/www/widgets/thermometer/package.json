{
	"type": "thermometer",
	"version": "0.1",
	"releaseType": "beta",
	"author": "yadoms team",
	"url": "http://www.yadoms.com/wiki/widgets/thermometer.html",
	"credits": "",
	"dimensions": {
		"min": {
			"x": 1,
			"y": 2
		},
		"max": {
			"x": 2,
			"y": 4
		},
		"default": {
			"x": 1,
			"y": 2
		}
	},
	"configurationSchema": {
		"device": {
			"type": "device",
			"expectedCapacity": ["temperature"],
			"expectedKeywordAccess": "get"
		},
		"customYAxisMinMax": {
			"type": "section",
			"enableWithCheckBox": "true",
			"enableWithCheckBoxDefaultValue": "false",
			"content": {
				"maximumValue": {
					"type": "decimal",
					"defaultValue": "50.0",
					"precision": "1"
				},
				"minimumValue": {
					"type": "decimal",
					"defaultValue": "-40.0",
					"precision": "1"
				}
			}
		}
	}
}