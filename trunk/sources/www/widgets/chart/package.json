{
	"type": "chart",
	"version": "0.1",
	"releaseType": "beta",
	"author": "yadoms team",
	"url": "http://www.yadoms.com/wiki/widgets/chart.html",
	"credits": "",
	"dimensions": {
		"min": {
			"x": 3,
			"y": 3
		},
		"max": {
			"x": 10,
			"y": 4
		},
		"default": {
			"x": 3,
			"y": 3
		}
	},
	"configurationSchema": {
		"interval": {
			"type": "enum",
			"values": {
				"HOUR": "",
				"DAY": "",
				"WEEK": "",
				"MONTH": "",
				"HALF_YEAR": "",
				"YEAR": ""
			},
			"defaultValue": "DAY"
		},
		"oneAxis": {
			"type": "section",
			"defaultValue": "false",
			"enableWithCheckBox": "true",
			"enableWithCheckBoxDefaultValue": "false",			
			"content": {
					"customYAxisMinMax": {
						"type": "section",
						"enableWithCheckBox": "true",
						"enableWithCheckBoxDefaultValue": "false",
						"content": {
							"minimumValue": {
								"type": "decimal",
								"defaultValue": "0.0",
								"precision": "1"
							},
							"maximumValue": {
								"type": "decimal",
								"defaultValue": "100.0",
								"precision": "1"
							}
						}
					}
			}
		},
		"devices": {
			"type": "list",
			"nbItemsMin": "1",
			"nbItemsMax": "3",
			"allowDuplication": "true",
			"item": {
				"type": "section",
				"name": "",
				"description": "",				
				"content": {
					"source": {
						"name": "",
						"description": "",
						"type": "device",
						"expectedKeywordType": ["numeric",
						"bool"],
						"expectedKeywordAccess": "get"
					},
					"color": {
						"type": "color",
						"defaultValue": "#0000FF"
					},
					"PlotType": {
						"type": "enum",
						"values": {
							"line": "",
							"bar": "",
							"arearange": ""
						},
						"defaultValue": "line"
					}
				}
			}
		}
	},
	"navigator": {
		"hour": "",
		"day": "",
		"week": "",
		"month": "",
		"half_month": "",
		"year": ""
	}
}