{
   "type": "forecast",
   "version": "0.1",
   "author": "yadoms team",
   "url" : "http://www.yadoms.com/wiki/widgets/forecast.html",
   "dimensions": {
      "min": {
         "x": 1,
         "y": 1
      },
      "max": {
         "x": 6,
         "y": 2
      },
      "default": {
         "x": 3,
         "y": 2
      }
   },
   "configurationSchema": {
      "device" : {
         "name" : "forecast",
         "description" : "The forecast for next days",
         "type" : "device",
         "expectedCapacity" : ["Forecast"],
         "expectedKeywordAccess" : "get"
      },
      "Information":
      {
         "name": "Forecast information",
         "description": "Information about forecast could be selected individually below:",
         "type" : "section",
         "content":
         {	  
			  "MaxWind":
			  {
				 "name": "The maximum speed of the wind",
				 "description": "",
				 "type": "bool",
				 "defaultValue": "true"
			  },
			  "AveWind":
			  {
				 "name": "The average speed of the wind",
				 "description": "",
				 "type": "bool",
				 "defaultValue": "true"
			  },
			  "AveHumidity":
			  {
				 "name": "The average humidity",
				 "description": "",
				 "type": "bool",
				 "defaultValue": "false"
			  },
			  "RainDay":
			  {
				 "name": "The rain in the day",
				 "description": "",
				 "type": "bool",
				 "defaultValue": "true"
			  }			  
		  }
		}
   }
}
