{
   "type": "forecast",
   "version": "0.1",
   "author": "yadoms team",
   "url" : "http://www.yadoms.com/wiki/widgets/forecast.html",
   "credits": "",
   "dimensions": {
      "min": {
         "x": 1,
         "y": 1
      },
      "max": {
         "x": 6,
         "y": 3
      },
      "default": {
         "x": 3,
         "y": 2
      }
   },
   "configurationSchema": {
      "device" : {
         "name" : "forecast",
         "description" : "The forecast for next days",
         "type" : "device",
         "expectedCapacity" : ["Forecast"],
         "expectedKeywordAccess" : "get"
      },
      "Information":
      {
         "name": "Forecast information",
         "description": "Information about forecast could be selected individually below:",
         "type" : "section",
         "content":
         {
			  "AveWind":
			  {
				 "name": "The average speed of the wind",
				 "description": "",
				 "type": "bool",
				 "defaultValue": "true"
			  },		 
			  "MaxWind":
			  {
				 "name": "The maximum speed of the wind",
				 "description": "",
				 "type": "bool",
				 "defaultValue": "true"
			  },
			  "RainDay":
			  {
				 "name": "The rain in the day",
				 "description": "",
				 "type": "bool",
				 "defaultValue": "true"
			  }	  
		  }
		},
		"DateFormat": {
		  "name": "Date Format",
		  "description": "Choose the date format of the widget",
		  "type": "enum",
		  "values": {
			"DateFormat1": "Short date. Ex: Monday 15",
			"DateFormat2": "Long date. Ex: June 15, 2015"
		  },
		  "defaultValue": "DateFormat1"
		}
   }
}
