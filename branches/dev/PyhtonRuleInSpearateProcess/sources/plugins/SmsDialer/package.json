{
   "type": "smsDialer",
   "name": "Sms Dialer",
   "description": "Send/receive SMS with a mobile phone. This plugin uses a compatible phone (supporting AT commands) connected to the system where Yadoms run to send/receive SMS. This plugin uses the GAMMU library (http://wammu.eu/).",
   "version": "0.1",
   "releaseType": "beta",
   "author": "SÃ©bastien Gallou",
   "url": "http://sourceforge.net/projects/yadoms/",
   "credits": "",
   "supportedPlatforms":
   {
      "mac": "none",
      "others": "supported"
   },
   "configurationSchema":
   {
      "Serial Port":
      {
         "type" : "enum",
         "name": "Serial port",
         "description": "The serial port connected to the phone",
         "values" : {"__Binding__" : {"type" : "system", "query" : "serialPorts"}}
      },
      "Protocol":
      {
         "name": "Protocol",
         "description": "The protocol used to dial with the phone. Use Wammu (http://wammu.eu/) to find accepted protocol for your phone.",
         "type": "enum",
         "values":
         {
            "at19200": "at19200",
            "at115200": "at115200",
            "mbus": "mbus",
            "fbus": "fbus",
            "fbususb": "fbususb",
            "fbuspl2303": "fbuspl2303",
            "dlr3": "dlr3",
            "fbusdlr3": "fbusdlr3",
            "dku5": "dku5",
            "fbusdku5": "fbusdku5",
            "dku5fbus": "dku5fbus",
            "ark3116fbus": "ark3116fbus",
            "dku2": "dku2",
            "dku2phonet": "dku2phonet",
            "dku2at": "dku2at",
            "fbusblue": "fbusblue",
            "phonetblue": "phonetblue",
            "blueobex": "blueobex",
            "bluephonet": "bluephonet",
            "blueat": "blueat",
            "bluerfobex": "bluerfobex",
            "bluefbus": "bluefbus",
            "bluerffbus": "bluerffbus",
            "bluerfphonet": "bluerfphonet",
            "bluerfat": "bluerfat",
            "bluerfgnapbus": "bluerfgnapbus",
            "blues60": "blues60",
            "bluerfs60": "bluerfs60",
            "infrared": "infrared",
            "fbusirda": "fbusirda",
            "irda": "irda",
            "irdaphonet": "irdaphonet",
            "irdaat": "irdaat",
            "irdaobex": "irdaobex",
            "irdagnapbus": "irdagnapbus"
         },
         "defaultValue": "at115200"
      },
      "PINCode":
      {
         "name" : "PIN code",
         "description" : "Phone PIN code, required to access to locked phone",
         "type" : "section",
         "enableWithCheckBox" : "true",
         "enableWithCheckBoxDefaultValue" : "false",
         "content" :
         {
            "PIN":
            {
               "name": "PIN",
               "description": "Phone PIN code",
               "type": "string",
               "regex" : "[0-9]{4}",
               "encrypted" : "true"
            }      
         }
      }
   }
}