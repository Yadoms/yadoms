{
   "type": "PhilipsHue",
   "version": "@PLUGIN_VERSION@",
   "author": "Oussama DAHMAZ",
   "credits": "",
   "supportedPlatforms": "all",
   "dependencies": {
      "yadoms": {
         "minimumVersion": "2.3.0-beta.1"
      }
   },
   "configurationSchema": {
      "PairingMode": {
         "type": "comboSection",
         "content": {
            "Automatic": {
               "name": "Auto",
               "type": "section",
               "content": {

               }
            },
            "Manual": {
               "name": "Manual",
               "type": "section",
               "content": {
                  "IPAddress": {
                     "type": "string",
                     "regex": "^(?:[0-9]{1,3}\\.){3}[0-9]{1,3}$",
                     "required": "true"
                  }
               }
            }
         }
      }
   }
}