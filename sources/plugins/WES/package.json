{
   "type": "WES",
   "version": "1.0.0-beta",
   "author": "Jean-Michel BERHAULT",
   "url": "https://github.com/Yadoms/yadoms/wiki/WES",
   "credits": "",
   "supportedPlatforms":"all",
   "configurationSchema": {
		"IPAddress": {
		  "type": "string",
		  "regex" : "^(?:[0-9]{1,3}\\.){3}[0-9]{1,3}$",
		  "required" : "true"
		},
		"Port": {
		  "type": "int",
		  "required" : "true",
		  "defaultValue": "80",
        "required" : "true"
		},
	    "authentication": {
		   "type": "section",
		   "enableWithCheckBox": "true",
		   "enableWithCheckBoxDefaultValue": "true",
		   "content": {
		      "Password": {
			     "type": "string",
			     "encrypted": "true",
              "required" : "true"
			}
		 }
	  }
   },
   "supportManuallyDeviceCreation": "true",
   "supportDeviceRemovedNotification": "true",
   "manuallyDeviceCreationConfigurationSchema": {
      "type":
      {
         "type": "radioSection",
         "content":
         {
			  "X8R" :
			  {
                 "type": "section",
                 "content":
                 {
				    "Position" :
				    {				 
				       "type" : "enum",
					   "__Binding__" : {
						 "type" : "plugin", 
						 "query" : "X8R"
					   }
					}
				 }
			  },
			  "X8D" :
			  {
                 "type": "section",
                 "content":
                 {
				    "Position" :
				    {				 
				       "type" : "enum",
				       "__Binding__" : {
					      "type" : "plugin", 
						  "query" : "X8D"
					   }
					}
				 }
			  },
			  "X24D" :
			  {
                 "type": "section",
                 "content":
                 {
				    "Position" :
				    {				 
				       "type" : "enum",
				       "__Binding__" : {
					      "type" : "plugin", 
						  "query" : "X24D"
					   }
					}
				 }
			  }			  
		 }
	  }
   }
}