{
   "type": "IPX800",
   "version": "1.0.0-rc.1",
   "author": "Jean-Michel BERHAULT",
   "url": "https://github.com/Yadoms/yadoms/wiki/IPX800",
   "credits": "",
   "supportedPlatforms":"all",
   "configurationSchema": {
		"IPAddress": {
		  "type": "string",
		  "regex" : "^(?:[0-9]{1,3}\\.){3}[0-9]{1,3}$",
		  "required" : "true"
		},
		"Port": {
		  "type": "int",
		  "required" : "true",
		  "defaultValue": "80"
		},
	    "authentication": {
		   "type": "section",
		   "enableWithCheckBox": "true",
		   "enableWithCheckBoxDefaultValue": "true",
		   "content": {
		      "Password": {
			     "type": "string",
			     "encrypted": "true",
              "required" : "true"
			}
		 }
	  }
   },
   "supportManuallyDeviceCreation": "true",
   "supportDeviceRemovedNotification": "true",
   "deviceConfiguration": {
      "staticConfigurationSchema": {
         "schemas" : {         
            "x8r" : {
               "types": { "X8R" : { "canBeCreatedManually" : "true" } },
               "content" : {
                  "Position" : {				 
                      "type" : "enum",
                      "__Binding__" : {
                        "type" : "plugin", 
                        "query" : "X8R"
                     }
                  }
               }
            },
            "x8d" : {
               "types": { "X8D" : { "canBeCreatedManually" : "true" } },
               "content" : {
                  "Position" : {				 
                      "type" : "enum",
                      "__Binding__" : {
                        "type" : "plugin", 
                        "query" : "X8D"
                     }
                  }
               }
            },
            "x24d" : {
               "types": { "X24D" : { "canBeCreatedManually" : "true" } },
               "content" : {
                  "Position" : {				 
                      "type" : "enum",
                      "__Binding__" : {
                        "type" : "plugin", 
                        "query" : "X24D"
                     }
                  }
               }
            }
         }
      }
   }
}