{
   "type": "OneWire",
   "version": "1.0.0-beta",
   "author": "SÃ©bastien GALLOU",
   "url": "https://github.com/Yadoms/yadoms/wiki/OneWire",
   "credits": "[OWFS 1-Wire File System](http://owfs.org)",
   "supportedPlatforms": {
      "linux": "supported",
      "others": "unsupported"
   },
   "configurationSchema": {
      "linuxMode": {
         "type": "radioSection",
         "show": {
            "__Binding__": {
               "type": "system",
               "query": "platformIsLinux"
            }
         },
         "content" : {
            "owfs" : {
                "type" : "section",
                "content" : {
                  "mountPoint" : {
                     "type" : "string",
                     "defaultValue": "/mnt/1wire"
                  }
               }
            },
            "kernel" : {
                "type" : "section",
                "content" : {
                  "mountPoint" : {
                     "type" : "string",
                     "defaultValue": "/sys/bus/w1/devices"
                  }
               }
            }
         }
      }
   }
}
