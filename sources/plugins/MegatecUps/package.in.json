{
  "type": "megatecUps",
  "version": "@PLUGIN_VERSION@",
  "author": "SÃ©bastien GALLOU",
  "url": "https://github.com/Yadoms/yadoms/wiki/MegatecUps",
  "credits": "",
  "supportedPlatforms": "all",
  "dependencies": {
    "yadoms": {
      "minimumVersion": "2.3.0-beta.1"
    }
  },
  "configurationSchema": {
    "SerialPort": {
      "type": "enum",
      "values": {
        "__Binding__": {
          "type": "system",
          "query": "serialPorts"
        }
      }
    },
    "UpsBeep": {
      "type": "bool",
      "defaultValue": "true"
    },
    "Autotest": {
      "type": "section",
      "enableWithCheckBox": true,
      "enableWithCheckBoxDefaultValue": false,
      "content": {
        "AutotestStartTime": {
          "type": "string",
          "required": "true",
          "regex": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$",
          "defaultValue": "00:00"
        }
      }
    },
    "UpsShutdownTimers": {
      "type": "section",
      "content": {
        "ShutdownDelay": {
          "type": "decimal",
          "defaultValue": ".3",
          "minimumValue": ".2",
          "maximumValue": "9",
          "precision": "1"
        },
        "RestoreDelay": {
          "type": "int",
          "defaultValue": "1",
          "minimumValue": "1",
          "maximumValue": "9999"
        }
      }
    }
  },
  "extraQueries": {
    "resetBatteryDeadCommand": {
      "iconClass": "fa fa-bolt"
    }
  }
}