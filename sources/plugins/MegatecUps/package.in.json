{
  "type": "megatecUps",
  "version": "@PLUGIN_VERSION@",
  "author": "SÃ©bastien GALLOU",
  "url": "https://github.com/Yadoms/yadoms/wiki/MegatecUps",
  "credits": "",
  "supportedPlatforms": "all",
  "dependencies": {
    "yadoms": {
      "minimumVersion": "2.5.3-beta.1"
    }
  },
  "configurationSchema": {
    "SerialPort": {
      "type": "enum",
      "values": {
        "__Binding__": {
          "type": "system",
          "query": "serialPorts"
        }
      }
    },
    "UpsBeep": {
      "type": "bool",
      "defaultValue": true
    },
    "Autotest": {
      "type": "checkboxSection",
      "defaultValue": false,
      "content": {
        "AutotestStartTime": {
          "type": "time",
          "required": true,
          "defaultValue": "00:00"
        }
      }
    },
    "UpsShutdownTimers": {
      "type": "section",
      "content": {
        "ShutdownDelay": {
          "type": "decimal",
          "defaultValue": 0.3,
          "minimumValue": 0.2,
          "maximumValue": 9,
          "precision": 1
        },
        "RestoreDelay": {
          "type": "int",
          "defaultValue": 1,
          "minimumValue": 1,
          "maximumValue": 9999
        }
      }
    }
  },
  "extraQueries": {
    "resetBatteryDeadCommand": {
      "iconClass": "fa fa-bolt"
    }
  }
}