{
	"type": "weather",
	"version": "1.2.0",
	"author": "Nicolas HILAIRE",
	"url": "http://www.yadoms.com/wiki/widgets/weather.html",
	"credits": "[Weather icons](https://github.com/erikflowers/weather-icons)",
   "dependencies": {
      "yadoms": {
         "minimumVersion": "2.4.0-beta.1"
      }
   },
	"dimensions": {
		"min": {
			"x": 2,
			"y": 1
		},
		"max": {
			"x": 3,
			"y": 2
		},
		"default": {
			"x": 2,
			"y": 1
		}
	},
   "hasTitle": true,
	"configurationSchema": {
		"conditionKeyword": {
			"type": "keyword",
			"expectedCapacity": ["weathercondition"]
      },
      "temperatureSection": {
         "type": "section",
         "enableWithCheckBox": "true",
         "enableWithCheckBoxDefaultValue": "false",
         "content": {
            "temperatureKeyword": {
               "type": "keyword",
               "expectedCapacity": ["temperature"]
            }
         }
      }
	}
}