{
  "type": "indicator",
  "version": "1.1.1",
  "author": "Nicolas HILAIRE",
  "url": "https://github.com/Yadoms/yadoms/wiki/indicator",
  "credits": "",
  "dependencies": {
    "yadoms": {
      "minimumVersion": "2.4.0-beta.1"
    }
  },
  "dimensions": {
    "min": {
      "x": 1,
      "y": 1
    },
    "max": {
      "x": 2,
      "y": 2
    },
    "default": {
      "x": 1,
      "y": 1
    }
  },
  "hasTitle": true,
  "configurationSchema": {
    "device": {
      "type": "keyword",
      "expectedCapacity": ["switch", "dimmable"]
    },
    "icon": {
      "type": "icon"
    },
    "readOnly": {
      "type": "bool",
      "defaultValue": "false"
    },
    "customColors": {
      "type": "section",
      "enableWithCheckBox": "true",
      "enableWithCheckBoxDefaultValue": "false",
      "content": {
        "activated": {
          "type": "color",
          "defaultValue": "#2e6da4"
        },
        "deactivated": {
          "type": "color",
          "defaultValue": "#777"
        }
      }
    }
  }
}