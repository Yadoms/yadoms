{
  "type": "indicator",
  "version": "1.1.2",
  "author": "Nicolas HILAIRE",
  "url": "https://github.com/Yadoms/yadoms/wiki/indicator",
  "credits": "",
  "dependencies": {
    "yadoms": {
      "minimumVersion": "2.5.3-beta.1"
    }
  },
  "dimensions": {
    "min": {
      "x": 1,
      "y": 1
    },
    "max": {
      "x": 2,
      "y": 2
    },
    "default": {
      "x": 1,
      "y": 1
    }
  },
  "hasTitle": true,
  "configurationSchema": {
    "device": {
      "type": "keyword",
      "expectedCapacity": ["switch", "dimmable"]
    },
    "icon": {
      "type": "icon"
    },
    "readOnly": {
      "type": "bool",
      "defaultValue": false
    },
    "customColors": {
      "type": "section",
      "enableWithCheckBox": true,
      "checkbox": {
        "defaultValue": false
      },
      "content": {
        "activated": {
          "type": "color",
          "defaultValue": "#2e6da4"
        },
        "deactivated": {
          "type": "color",
          "defaultValue": "#777"
        }
      }
    }
  }
}