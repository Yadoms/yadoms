{
  "type": "indicator",
  "version": "0.1",
  "releaseType": "beta",
  "author": "Nicolas HILAIRE",
  "url": "http://www.yadoms.com/wiki/widgets/indicator.html",
  "credits": "",
  "dimensions": {
    "min": {
      "x": 1,
      "y": 1
    },
    "max": {
      "x": 2,
      "y": 2
    },
    "default": {
      "x": 1,
      "y": 1
    }
  },
  "hasTitle": true,
  "configurationSchema": {
    "device": {
      "type": "keyword",
      "expectedCapacity": [ "switch", "dimmable" ],
      "expectedKeywordAccess": "get"
    },
    "icon": {
      "type": "icon"
    },
    "readOnly": {
      "type": "bool",
      "defaultValue": "false"
    },
    "customColors": {
      "type": "section",
      "enableWithCheckBox": "true",
      "enableWithCheckBoxDefaultValue": "false",
      "content": {
        "activated": {
          "type": "color",
          "defaultValue": "#2e6da4"
        },
        "deactivated": {
          "type": "color",
          "defaultValue": "#777"
        }
      }
    }
  }
}