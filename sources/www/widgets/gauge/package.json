{
  "type": "gauge",
  "version": "1.1.1",
  "author": "Jean-Michel BERHAULT, SÃ©bastien GALLOU",
  "url": "https://github.com/Yadoms/yadoms/wiki/gauge",
  "credits": "[Highstocks](http://www.highcharts.com/)",
  "dependencies": {
    "yadoms": {
      "minimumVersion": "2.4.0-beta.1"
    }
  },
  "dimensions": {
    "min": {
      "x": 2,
      "y": 2
    },
    "max": {
      "x": 6,
      "y": 6
    },
    "default": {
      "x": 2,
      "y": 2
    }
  },
  "hasTitle": true,
  "configurationSchema": {
    "device": {
      "type": "keyword",
      "expectedKeywordType": "numeric"
    },
    "customYAxisMinMax": {
      "type": "section",
      "enableWithCheckBox": "true",
      "enableWithCheckBoxDefaultValue": "false",
      "content": {
        "minimumValue": {
          "type": "decimal",
          "defaultValue": "0",
          "precision": "1"
        },
        "maximumValue": {
          "type": "decimal",
          "defaultValue": "100.0",
          "precision": "1"
        }
      }
    },
    "displayMode": {
      "type": "radioSection",
      "content": {
        "solidColor": {
          "type": "section",
          "content": {
            "color": {
              "type": "color",
              "defaultValue": "#55BF3B"
            }
          }
        },
        "thresholds": {
          "type": "section",
          "content": {
            "firstColor": {
              "type": "color",
              "defaultValue": "#55BF3B"
            },
            "addedThresholds": {
              "type": "list",
              "nbItemsMin": "1",
              "nbItemsMax": "5",
              "allowDuplication": "true",
              "item": {
                "type": "section",
                "content": {
                  "value": {
                    "type": "decimal",
                    "defaultValue": "50.0",
                    "precision": "1"
                  },
                  "color": {
                    "type": "color",
                    "defaultValue": "#FF0000"
                  }
                }
              }
            }
          }
        },
        "gradient": {
          "type": "section",
          "content": {
            "minColor": {
              "type": "color",
              "defaultValue": "#55BF3B"
            },
            "maxColor": {
              "type": "color",
              "defaultValue": "#FF0000"
            }
          }
        }
      }
    }
  }
}