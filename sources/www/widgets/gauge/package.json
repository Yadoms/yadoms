{
   "type": "gauge",
   "version": "0.1",
   "releaseType": "beta",
   "author": "yadoms team",
   "url" : "http://www.yadoms.com/wiki/widgets/gauge.html",
   "credits": "",
   "dimensions": {
      "min": {
         "x": 2,
         "y": 1
      },
      "max": {
         "x": 3,
         "y": 2
      },
      "default": {
         "x": 2,
         "y": 1
      }
   },
   "configurationSchema": {
      "text" : {
         "name" : "Title",
         "description" : "Title of this widget",
         "type" : "string",
         "defaultValue" : "",
         "required" : "false"
      },
      "device" : {
         "name" : "Data to display",
         "description" : "Select the data that you want to display",
         "type" : "device",
         "expectedKeywordType" : "numeric",
         "expectedKeywordAccess" : "get"
      },
      "customYAxisMinMax" : {
         "type" : "section",
         "name" : "Set min and max of the gauge",
         "description" : "Allow to manually set the min and max of the gauge. If not checked, min and max will be respectively set to 0 and 100",
         "enableWithCheckBox" : "true",
         "enableWithCheckBoxDefaultValue" : "false",
         "content" : {
            "minimumValue" : {
               "type" : "decimal",
               "name" : "Minimum value",
               "description" : "Set the minimum value",
               "defaultValue" : "0",
               "precision" : "1"
            },		 
            "maximumValue" : {
               "type" : "decimal",
               "name" : "Maximum value",
               "description" : "Set the maximum value",
               "defaultValue" : "100.0",
               "precision" : "1"
            }
         }
      },
      "thresholds" : {
         "type" : "section",
         "name" : "Thresholds",
         "description" : "Change the gauge color depending on data value (5 thresholds max)",
         "content" : {
            "defaultColor" : {
               "type" : "color",
               "name" : "Default color",
               "description" : "Set the color when data is lower than first threshold (or when there is no threshold)",
               "defaultValue" : "#55BF3B"
            },
            "addedThresholds" : {
               "type" : "list",
               "name" : "Thresholds",
               "description" : "Change the gauge color depending on data value (5 thresholds max)",
               "nbItemsMin" : "0",
               "nbItemsMax" : "5",
               "allowDuplication" : "true",
               "item" : {
                  "type" : "section",
                  "name" : "threshold",
                  "description" : "Configure the color to apply to gauge when data becomes greater than threshold",
                  "content" : {
                     "value" : {
                        "type" : "decimal",
                        "name" : "Threshold",
                        "defaultValue" : "50.0",
                        "precision" : "1"
                     },
                     "color" : {
                        "name" : "Color",
                        "type" : "color",
                        "defaultValue" : "#FF0000"
                     }
                  }
               }
            }
         }
      }
	}
}