{
  "type": "shutter",
  "version": "1.1.1",
  "author": "Jean-Michel BERHAULT",
  "url": "https://github.com/Yadoms/yadoms/wiki/shutter",
  "credits": "",
  "dependencies": {
    "yadoms": {
      "minimumVersion": "2.4.0-beta.1"
    }
  },
  "dimensions": {
    "min": {
      "x": 1,
      "y": 1
    },
    "max": {
      "x": 2,
      "y": 2
    },
    "default": {
      "x": 1,
      "y": 1
    }
  },
  "hasTitle": true,
  "configurationSchema": {
    "device": {
      "type": "keyword",
      "expectedCapacity": ["switch", "curtain", "dimmable"]
    },
    "invert": {
      "type": "bool",
      "defaultValue": "false"
    },
    "kind": {
      "type": "radioSection",
      "content": {
        "window": {
          "type": "section"
        },
        "door": {
          "type": "section"
        },
        "verticalInverter": {
          "type": "section"
        }
      }
    }
  }
}