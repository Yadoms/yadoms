{
	"type": "wind",
	"version": "1.0.0-beta.2",
	"author": "Jean-Michel BERHAULT",
	"url": "https://github.com/Yadoms/yadoms/wiki/wind",
	"credits": "",
  "dimensions": {
    "min": {
      "x": 3,
      "y": 3
    },
    "max": {
      "x": 3,
      "y": 3
    },
    "default": {
      "x": 3,
      "y": 3
    }
  },
  "hasTitle" :  true,
	"configurationSchema": {
      "windDirection": {
         "type": "keyword",
         "expectedCapacity": ["direction"],
         "expectedKeywordAccess": "get"
      },
      "speedDisplay" : {
			"type": "section",
			"defaultValue": "true",
			"enableWithCheckBox": "true",
			"enableWithCheckBoxDefaultValue": "false",
         "content": {        
            "windSpeed": {
               "type": "keyword",
               "expectedCapacity": ["speed"],
               "expectedKeywordAccess": "get"
            }
         }
      },
      "options" : {
			"type": "section",
			"defaultValue": "true",
			"enableWithCheckBox": "true",
			"enableWithCheckBoxDefaultValue": "false",
         "content": {        
            "directionCorrection": {
               "type": "int",
               "defaultValue": "0",
               "maximumValue": "360",
               "minimumValue": "0"
            }
         }
      }      
	}
}