{
	"type": "numeric-display",
	"version": "1.1.0-beta.1",
	"author": "Nicolas HILAIRE",
	"url": "https://github.com/Yadoms/yadoms/wiki/numeric-display",
	"credits": "",
    "dependencies": {
       "yadoms" : {
          "minimumVersion" : "2.2.0-beta.1"
       }
    },
  "dimensions": {
    "min": {
      "x": 1,
      "y": 1
    },
    "max": {
      "x": 4,
      "y": 4
    },
    "default": {
      "x": 1,
      "y": 1
    }
  },
  "hasTitle" :  true,
	"configurationSchema": {
		"device": {
			"type": "keyword",
			"expectedKeywordType": "numeric",
			"expectedKeywordAccess": "get"
		},
      "precision": {
         "type" : "int",
         "defaultValue" : "1",
         "maximumValue" : "3",
         "minimumValue" : "0"
      },
      "dateDisplay": {
         "type": "bool",
         "defaultValue" : "false"
      }
	}
}