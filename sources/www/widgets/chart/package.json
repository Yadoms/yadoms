{
	"type": "chart",
	"version": "1.0.0-beta",
	"author": "Jean-Michel BERHAULT, Nicolas HILAIRE",
	"url": "https://github.com/Yadoms/yadoms/wiki/chart",
	"credits": "[Highstocks](http://www.highcharts.com/)",
  "dimensions": {
    "min": {
      "x": 3,
      "y": 3
    },
    "max": {
      "x": 10,
      "y": 4
    },
    "default": {
      "x": 3,
      "y": 3
    }
  },
  "hasTitle" :  true,
	"configurationSchema": {
		"interval": {
			"type": "enum",
			"values": {
				"HOUR": "",
				"DAY": "",
				"WEEK": "",
				"MONTH": "",
				"HALF_YEAR": "",
				"YEAR": ""
			},
			"defaultValue": "DAY"
		},
		"oneAxis": {
			"type": "section",
			"defaultValue": "false",
			"enableWithCheckBox": "true",
			"enableWithCheckBoxDefaultValue": "false",			
			"content": {
					"customYAxisMinMax": {
						"type": "section",
						"enableWithCheckBox": "true",
						"enableWithCheckBoxDefaultValue": "false",
						"content": {
							"minimumValue": {
								"type": "decimal",
								"defaultValue": "0.0",
								"precision": "1"
							},
							"maximumValue": {
								"type": "decimal",
								"defaultValue": "100.0",
								"precision": "1"
							}
						}
					}
			}
		},
		"devices": {
			"type": "list",
			"nbItemsMin": "1",
			"nbItemsMax": "3",
			"allowDuplication": "true",
			"item": {
				"type": "section",
				"name": "",
				"description": "",				
				"content": {
					"source": {
						"name": "",
						"description": "",
						"type": "keyword",
						"expectedKeywordType": ["numeric", "bool"],
						"expectedKeywordAccess": "get"
					},
					"color": {
						"type": "color",
						"defaultValue": "#0000FF"
					},
					"PlotType": {
            "type": "enum",
            "sort": "true",
						"values": {
							"line": "",
							"bar": "",
							"arearange": ""
						},
						"defaultValue": "line"
					}
				}
			}
		}
	}
}